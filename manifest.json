{
  "manifest_version": 2,
  "name": "kbwarrior",
  "description": "Browse the web like a true keyboard warrior with simple hinting and a few vim-style browsing shortcuts.",
  "version": "0.2.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "kbwarrior settings"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.reddit.com/*",
        "*://*.github.com/*"
      ],
      "js": ["helpers.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}
